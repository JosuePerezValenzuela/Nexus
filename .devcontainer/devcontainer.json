{
  "name": "Nexus AI Backend (uv)",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "containerEnv": {
    "ANTHROPIC_BASE_URL": "http://host.docker.internal:1234",
    "ANTHROPIC_AUTH_TOKEN": "lmstudio",
    "ANTHROPIC_MODEL": "qwen/qwen2.5-coder-14b"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.analysis.typeCheckingMode": "strict", 
        "editor.formatOnSave": true
      },
      "extensions": [
        "ms-python.python",
        "charliermarsh.ruff",  // Linter ultra rápido (reemplaza flake8/black)
        "tamasfe.even-better-toml" // Para leer pyproject.toml
      ]
    }
  },
  "runArgs": ["--network=nexus-ai-backend_nexus-network", "--add-host=host.docker.internal:host-gateway"],
  "remoteUser": "vscode",
  "postCreateCommand": "uv sync" // Se ejecutará al crear el contenedor
}